    </div>
    <div class="modal fade" id="modal-tree-type" role="dialog">
        <div class="modal-dialog">  
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-tree-type-title"></h4>
            </div>
            <div class="modal-body">
                <form id="form-tree-type" action="#">
                    <div class="form-group">
                        <label class="control-label">Id</label>
                        <input name="type_id" placeholder="Id" class="form-control type-id" type="text" readonly/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên loại cây</label>
                        <input name="type_name" placeholder="Tên loại cây" class="form-control type-name" type="text"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nhiệt độ (C)</label>
                        <input name="standard_temperature" placeholder="Nhiệt độ phù hợp" class="form-control standard-temperature" type="text"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Độ ẩm</label>
                        <input name="standard_humidity" placeholder="Độ ẩm phù hợp"  class="form-control standard-humidity" type="text"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Lượng nước</label>
                        <input name="standard_water" placeholder="Lượng nước"  class="form-control standard-water" type="text"/>
                    </div>
              </form>   
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" onclick="saveTreeType()">Save</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>
      <script src="/js/tree-type.js"></script>
