    <div id="page-wrapper">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                <h1>
                    <%= title %>
                </h1>
            </div>
        </div>
        <div class="tree-types">
            <div class="tree-types__header">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a onclick="addTreeType()" class="btn btn-primary">Thêm mới</a>
                    </div>

                    <!-- <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5" style="padding-right:0;">

                        <input type="text" class="form-control" placeholder="Tên, mã, SĐT...">
                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="padding-left:0;">
                        <a href="" class="btn btn-default" style="width:100%;"><i class="fa fa-search"></i></a>
                    </div> -->
                </div>
            </div>
            <div class="tree-types__body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên loại cây</th>
                            <th scope="col">Nhiệt độ (C)</th>
                            <th scope="col">Độ ẩm (%)</th>
                            <th scope="col">Lượng nước (l)</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(tree_types){ %>
                            <% tree_types.forEach(function(item){ %>
                                <tr>
                                    <th scope="row"><%= item.type_id %></th>
                                    <td><%= item.type_name %></td>
                                    <td><%= item.standard_temperature %></td>
                                    <td><%= item.standard_humidity %></td>
                                    <td><%= item.standard_water %></td>
                                    <td>
                                        <a class="btn btn-warning edit-tree-type" onclick="editTreeType()" data-id="<%= item.type_id %>">Chỉnh sửa</a>
                                        <!-- <a href="" class="btn btn-danger">Xóa</a> -->
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                        
                    </tbody>
                </table>
            </div>
