<%- include header.ejs %>
<link href="/css/tree_type.css" rel="stylesheet">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                <h1>
                    <%= title %>
                </h1>
            </div>
        </div>
        <div class="tree-types">
            <div class="tree-types__header">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a onclick="addSensor()" class="btn btn-primary">Thêm mới</a>
                    </div>

                    <!-- <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5" style="padding-right:0;">

                        <input type="text" class="form-control" placeholder="Tên, mã, SĐT...">
                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1" style="padding-left:0;">
                        <a href="" class="btn btn-default" style="width:100%;"><i class="fa fa-search"></i></a>
                    </div> -->
                </div>
            </div>
            <div class="tree-types__body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Tên sensor</th>
                            <th scope="col">Thông tin chi tiết</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(sensors){ %>
                            <% sensors.forEach(function(item){ %>
                                <tr>
                                    <th scope="row"><%= item.sensor_id %></th>
                                    <td><%= item.sensor_name %></td>
                                    <td><%= item.sensor_detail %></td>
                                    <td>
                                            <%if( item.sensor_state==1){ %>
                                                Đang hoạt động
                                            <% }else{ %>
                                                Không hoạt động
                                            <% } %>
                                    </td>
                                    <td>
                                        <a onclick="editSensor()"class="btn btn-warning edit-sensor" data-id="<%= item.sensor_id %>">Chỉnh sửa</a>
                                        <!-- <a class="btn btn-danger">Xóa</a> -->
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                        
                    </tbody>
                </table>
            </div>
